<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/DiscountBackground"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/include">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_5sdp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/Discount_ImageView_DiscountImage"
            android:layout_width="@dimen/_117sdp"
            android:layout_height="@dimen/_117sdp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/DiscountImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Discount_TextView_DiscountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11sdp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chipotle Chicken" />

        <TextView
            android:id="@+id/Unused4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="@string/Discount"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/Discount_TextView_DiscountName"
            app:layout_constraintTop_toBottomOf="@+id/Discount_TextView_DiscountName" />

        <TextView
            android:id="@+id/Discount_TextView_DiscountPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            tools:text="25%"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Unused4"
            app:layout_constraintStart_toEndOf="@+id/Unused4"
            app:layout_constraintTop_toTopOf="@+id/Unused4" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/Discount_Button_OrderNow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_38sdp"
            android:text="@string/OrderNow"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/Unused4"
            app:layout_constraintTop_toBottomOf="@+id/Unused4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


